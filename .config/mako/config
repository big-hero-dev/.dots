# Mako Configuration with Slide Animation

# Default settings
anchor=top-right
margin=6
padding=10
width=350
height=150
border-size=2
border-radius=10
border-color=#83c092
background-color=#2d353bdd
text-color=#d3c6aa
font=Inter 11

# Icon
icons=1
max-icon-size=32
icon-path=/usr/share/icons

# Grouping
group-by=app-name
max-visible=5

# Timeout
default-timeout=5000
ignore-timeout=0

# Progress bar
progress-color=over #83c092

# Do Not Disturb mode
[mode=do-not-disturb]
invisible=1

# Urgency levels
[urgency=low]
border-color=#7fbbb3
default-timeout=3000
on-notify=exec paplay /usr/share/sounds/freedesktop/stereo/message.oga

[urgency=normal]
border-color=#83c092
default-timeout=5000
on-notify=exec paplay /usr/share/sounds/freedesktop/stereo/message.oga

[urgency=critical]
border-color=#e67e80
default-timeout=0
on-notify=exec paplay /usr/share/sounds/freedesktop/stereo/complete.oga

# App-specific rules
[app-name="Spotify"]
border-color=#a7c080
default-timeout=3000

# Volume notification (Steam Deck style)
[app-name="volume"]
anchor=top-center
width=300
height=35
margin=10
padding=0,6
background-color=#1e2326
text-color=#e6e2cc
border-color=#4a555b
border-size=2
border-radius=9
progress-color=over #83c092
font=IBM Plex Mono 12
format=<span font='10'><b>%s</b> %b</span>
max-icon-size=20
default-timeout=2000

# Brightness
[app-name="brightness"]
anchor=top-center
width=300
height=35
margin=10
padding=0,10
background-color=#1e2326
text-color=#e6e2cc
border-color=#4a555b
border-size=2
border-radius=9
progress-color=over #83c092
font=JetBrains Mono Nerd Font 12
format=<span font='10'><b>%s</b> %b</span>
max-icon-size=20
default-timeout=2000
