#!/usr/bin/env sh

WALLPAPER="$(cat ~/.config/sway/wallpaper)"

swaylock \
  --image "$WALLPAPER" \
  --scaling fill \
  --clock \
  --indicator \
  --ring-color 7a8478 \
  --inside-color 1e2326cc \
  --key-hl-color a7c080 \
  --separator-color 00000000 \
  --line-color 00000000 \
  --inside-ver-color 1e2326cc \
  --ring-ver-color 7fbbb3 \
  --inside-wrong-color 1e2326cc \
  --ring-wrong-color e67e80 \
  --text-color d3c6aa \
  --text-ver-color d3c6aa \
  --text-wrong-color d3c6aa \
