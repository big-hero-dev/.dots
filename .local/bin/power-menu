#!/usr/bin/env sh

chosen=$(printf "Lock\nShutdown\nReboot\nSuspend\nLogout\n" | \
    fuzzel --dmenu --prompt="Power")

case "$chosen" in
    Shutdown)
        systemctl poweroff
        ;;
    Reboot)
        systemctl reboot
        ;;
    Suspend)
        systemctl suspend
        ;;
    Logout)
        niri msg action quit
        ;;
    Lock)
        lockscreen
        ;;
esac
