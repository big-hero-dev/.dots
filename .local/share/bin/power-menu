#!/usr/bin/env sh

chosen=$(printf "Shutdown\nReboot\nSuspend\nLogout\nLock\n" | \
    fuzzel --dmenu --prompt="Power")

case "$chosen" in
    Shutdown)
        systemctl poweroff
        ;;
    Reboot)
        systemctl reboot
        ;;
    Suspend)
        systemctl suspend
        ;;
    Logout)
        swaymsg exit
        ;;
    Lock)
        swaylock
        ;;
esac

